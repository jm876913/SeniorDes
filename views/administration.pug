doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // PAGE settings
    link(rel='icon', href='https://templates.pingendo.com/assets/Pingendo_favicon.ico')
    title Administration
    meta(name='description')
    meta(name='keywords')
    // CSS dependencies
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css', type='text/css')
    // Script: Animated entrance
    script(src='/js/animate-in.js')
    link(rel='stylesheet', href='/administration.css')
  body.text-center
    .py-5.section-aquamarine(style='	background-image: url(/assets/programofstudybackground.jpg);	background-position: left top;	background-size: 60%;	background-repeat: repeat;')
        .container
          .row
            .col-md-12
              h1.display-6.shadow-lg.text-center.text-white Administration Home Page
              h5 System Accounts
    a.btn.btn-primary.text-white(href='/info/admin/adminpage', style='font-weight: bold; cursor:pointer;position: absolute;top: 20px;right:20px;padding:4px;border-radius: 8px; width:30px;display:flex;flex-direction:row;align-items:center;justify-content:center;font-size:14px;color:white')
      i.fa.fa-info-circle.fa-fw
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark
      .container
        button.navbar-toggler.navbar-toggler-right.border-0(type='button', data-toggle='collapse', data-target='#navbar12')
          p.navbar-brand.mb-0.text-white
            i.fa.d-inline.fa-lg.fa-bars
            |  MENU
        #navbar12.collapse.navbar-collapse
          a.navbar-brand.d-none.d-md-block
            b  ETM
          ul.navbar-nav.mx-auto
            li.nav-item
              a.nav-link(href='/houme/admin') 
                i.fa.fa-graduation-cap.fa-fw
                | Students
            li.nav-item
              a.nav-link(href='/admincourseedit/index') 
               i.fa.fa-pencil.fa-fw
               | Edit Layout
            li.nav-item
              a.nav-link(href='/admindownload/manual') 
               i.fa.fa-book.fa-fw
               | Manual
          ul.navbar-nav
            li.nav-item
              a.nav-link.text-primary(href='/') 
                i.fa.fa-power-off.fa-fw
                | Logout
    // Cover
    .py-5(style='')
      .container
        .row
          .col-md-12
            .table-responsive
              table.table.table-striped.table-borderless.table-sm
                thead.table-dark
                  tr(align="left")
                    th Account Owner
                    th Username
                    th Change Password
                    th Delete Account
                tbody
                  each accountdata in accounts
                    tr(align="left")
                      th #{accountdata.accfname} #{accountdata.acclname}
                      th #{accountdata.username}
                      td
                        a.btn.btn-primary(href='/adminpasswordchange/' + accountdata.username, style='font-weight: bold;') 
                          i.fa.fa-lock.fa-fw
                          | Reset Password
                      td
                        a.btn.btn-primary(href='/delete/' + accountdata.username, style='font-weight: bold;', Onclick='return confirmDelete()') 
                          i.fa.fa-minus.fa-fw
                          | Delete Account
