    script(src='/js/smooth-scroll.js', style='')
    script(type='text/javascript').
      function isNumberKey(evt){
          var charCode = (evt.which) ? evt.which : event.keyCode;
          if (charCode > 31 && (charCode < 48 || charCode > 57) && charCode != 45)
              return false;

          return true;
        }