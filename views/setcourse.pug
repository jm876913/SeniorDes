    form(method='POST', action='/courseedit/set', id='setcourse')
      .py-5
        .container
          .row
            .table-responsive
              table.table.table-striped.table-borderless.table-sm
                thead.thead-dark
                  tr(align="left")
                    th Course Code
                    th Catalog Year
                    th Position
                    th Heading
                tbody
                  each course in courselist
                    tr(align="left")
                      td
                        label #{course.courseName}
                        input(type='hidden', name='code[]', placeholder='Position', value=course.courseName)
                      td 
                        label #{course.catalogYear}
                        input(type='hidden', name='catalog[]', placeholder='Position', value=course.catalogYear)
                      td
                        u
                          input(type='text', onkeypress='return isNumberKey(event)', name='position[]', placeholder='Position', value=course.position)
                      td
                        u
                          select(name='heading[]', placeholder='', value=course.heading) 
                            option(selected="selected") #{course.heading}
                            each head in headings
                              option #{head.heading}
      input.btn.btn-primary.btn-md.px-3(type='submit', value='Submit', form='setcourse', style='cursor:pointer;position: fixed;bottom: 20px;right:20px;padding:4px; width:220px;display:flex;flex-direction:row;align-items:center;justify-content:center;font-size:14px;color:white')                       
