    script(type='text/javascript').
      function checkPass(pinput)
      {
        var passencryption = new RegExp("^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#\$%\^&\*])(?=.{8,})");
        
        const input = pinput.value;
          if(input.length > 7 && passencryption.test(input))
          {
              pinput.setCustomValidity("");
              return true;
          }
          else{
            pinput.setCustomValidity("Passwords Must Match! Password Must Contain: \r\n1 Lowercase Letter, \r\n 1 Uppercase Letter,  \r\n 1 Number, \r\n 1 Special Character, \r\n Length at least 8 \r\n");
            return false;
          }
      }