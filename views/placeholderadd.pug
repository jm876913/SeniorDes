    script(type='text/javascript').
      function isNumberKey2(evt){
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57) && charCode != 46)
            return false;

         return true;
      }
    script(type='text/javascript').
      function isNumberKey(evt){
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57) && charCode != 45)
            return false;

         return true;
      }
    script(type='text/javascript').
      function formatme(event){
        if(!isNumberKey(event)){
          return false;
        }
        const target = event.target;
        const input = target.value.replace(/\D/g,'').substring(0,7);
        const numberone = input.substring(0,4);
        const numbertwo = input.substring(4,5);
        if(input.length > 4){
          target.value = `${numberone}-${numbertwo}`;
        }

      }
    script(type='text/javascript').
      function stripspaces(input){
        input.value = input.value.replace(/\s/gi,"");
        return true;
      }
    script(type='text/javascript').
      function noslashes(evt){
        var charCode = (evt.which) ? evt.which : event.keyCode;
        console.log(charCode);
        if (charCode == 47 || charCode == 92){
            return false;
        }

         return true;
      }